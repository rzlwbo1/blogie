@model Bloggie.Web.Models.ViewModel.UserVm;

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h2>Show All Users - Admin Functionallty</h2>
    </div>
</div>

<div class="container py-5">

    @if (Model != null && Model.Users.Any())
    {
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Username</td>
                        <td>@item.EmailAddress</td>
                        <td>options</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>Opps data tidak ditemukan!</h3>
    }
</div>
