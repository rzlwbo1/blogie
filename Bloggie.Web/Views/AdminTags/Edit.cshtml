@model Bloggie.Web.Models.ViewModel.EditTagRequest;
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h2>Edit Tags - Admin Functionallty</h2>
    </div>
</div>


<section id="formTag" class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label for="id" class="form-label">ID</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly>
        </div>

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
        </div>

        <div class="mb-3">
            <label for="displayName" class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName">
        </div>

        <div class="mb-3 d-flex gap-2">
            <button type="submit" class="btn btn-warning">Save Changes</button>

            <button type="submit" class="btn btn-danger" asp-action="Delete"
                asp-controller="AdminTags">
                Delete
            </button>
        </div>
    </form>
</section>
